{
    "_metadata": {
        "major_version": 1
    },
    "display_information": {
        "name": "Slack Basic"
    },
    "features": {
        "bot_user": {
            "display_name": "SlackBasic",
            "always_online": true
        },
        "slash_commands": [
            {
                "command": "/basic",
                "description": "Run a basic command"
            }
        ]
    },
    "oauth_config": {
        "scopes": {
            "bot": [
                "commands",
                "chat:write.public",
                "app_mentions:read",
                "chat:write"
            ]
        }
    },
    "settings": {
        "event_subscriptions": {
            "bot_events": ["app_mention"]
        },
        "interactivity": {
            "is_enabled": true
        },
        "org_deploy_enabled": false,
        "socket_mode_enabled": true
    }
}
